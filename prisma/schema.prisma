generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "sqlite"
  url      = env("DATABASE_URL_LOCAL")
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  password   String
  email      String     @unique
  bio        String?
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  tweets     Tweet[]
  likes      Like[]
  responses  Response[]
}

model Tweet {
  id         Int        @id @default(autoincrement())
  tweet      String
  views      Int        @default(0)
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  userId     Int
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes      Like[]
  responses  Response[]
}

model Like {
  created_at  DateTime @default(now())
  upadated_at DateTime @updatedAt
  userId      Int
  tweetId     Int

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  tweet Tweet @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  @@id(name: "id", [userId, tweetId])
}

model Response {
  id         Int      @id @default(autoincrement())
  payload    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  tweet      Tweet?   @relation(fields: [tweetId], references: [id], onDelete: Cascade)
  tweetId    Int?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int?
}
